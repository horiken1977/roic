{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/out",
  "installCommand": "npm install",
  "functions": {
    "api/edinet/companies.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/edinet/financial.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/vercel/logs.js": {
      "maxDuration": 20,
      "memory": 512
    },
    "api/debug/mitsubishi.js": {
      "maxDuration": 40,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Accept, Content-Type, Content-Length, Accept-Encoding, X-CSRF-Token, Authorization, X-Requested-With" },
        { "key": "Access-Control-Allow-Credentials", "value": "false" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}