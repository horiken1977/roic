# ROIC分析アプリケーション バックエンド環境変数設定

# サーバー設定
NODE_ENV=development
PORT=3001

# CORS設定
CORS_ORIGIN=http://localhost:3000

# EDINET API設定（セキュア）
# 実際のEDINET APIキーを設定してください
# 取得方法: https://disclosure.edinet-fsa.go.jp/EKW0EZ1001.html
EDINET_API_KEY=your_edinet_api_key_here

# データベース設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roic_analysis
DB_USER=roic_user
DB_PASSWORD=secure_password

# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key